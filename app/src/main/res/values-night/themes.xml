<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TASTYRecipe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- <item name="android:windowLightStatusBar">true</item>-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="getStartedButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_24sdp</item>
    </style>

    <style name="searchButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_8sdp</item>
    </style>

    <style name="imageCircle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="imageCard10dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_10sdp</item>
    </style>

    <style name="imageCardTop16dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_16sdp</item>
        <item name="cornerSizeTopRight">@dimen/_16sdp</item>
    </style>

    <style name="imageCardTop8dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_8sdp</item>
        <item name="cornerSizeTopRight">@dimen/_8sdp</item>
    </style>

    <style name="ExpandedAppBar">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="CollapsedAppBar">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="fontFamily">@font/poppins_light</item>
    </style>
</resources>