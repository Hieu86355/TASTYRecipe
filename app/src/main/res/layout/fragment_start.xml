<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/start_logo"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/start_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"/>

    <TextView
        android:id="@+id/start_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/start_text_title"
        app:layout_constraintVertical_bias="0.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5k+ PREMIUM RECIPES"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/secondary_text"
        android:includeFontPadding="false"
        android:fontFamily="@font/montserrat_light"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp" />

    <TextView
        android:id="@+id/start_text_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/start_btn_started"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="It's \nCooking \nTime!"
        android:textSize="@dimen/_30ssp"
        android:textColor="@color/primary_text"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/start_btn_started"
        android:text="Get Started"
        android:backgroundTint="@color/primary_green"
        android:padding="@dimen/_16sdp"
        app:shapeAppearance="@style/getStartedButton"
        android:stateListAnimator="@null"
        app:rippleColor="@color/secondary_text"
        android:fontFamily="@font/montserrat_bold"
        android:includeFontPadding="false"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    

</androidx.constraintlayout.widget.ConstraintLayout>